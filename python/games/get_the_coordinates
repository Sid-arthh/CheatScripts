import pyautogui
import time

print("\n=== SCREEN REGION CALIBRATION (SQUARE) ===")

print("Move mouse to TOP-LEFT corner of capture area in 5 seconds...")
time.sleep(5)
top_left = pyautogui.position()
print("TOP-LEFT:", top_left)

print("Move mouse to BOTTOM-RIGHT corner of capture area in 5 seconds...")
time.sleep(5)
bottom_right = pyautogui.position()
print("BOTTOM-RIGHT:", bottom_right)

width = bottom_right.x - top_left.x
height = bottom_right.y - top_left.y

print("\n=== CAPTURE REGION ===")
print("CAPTURE_REGION = {")
print(f'    "top": {top_left.y},')
print(f'    "left": {top_left.x},')
print(f'    "width": {width},')
print(f'    "height": {height}')
print("}")
